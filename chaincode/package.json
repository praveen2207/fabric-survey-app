{
    "name": "surveycc",
    "version": "1.0.0",
    "description": "hyperledger fabric network(surveynet) chaincode",
    "author": "Kim Woo Jae <woojae9488@naver.com>",
    "main": "index.js",
    "scripts": {
        "lint": "eslint .",
        "start": "fabric-chaincode-node start",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "fabric-contract-api": "~1.4.0",
        "fabric-shim": "~1.4.0"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-prettier": "^3.1.2",
        "prettier": "^1.19.1"
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "class-methods-use-this": 0,
            "import/no-unresolved": 0,
            "max-classes-per-file": 0,
            "no-await-in-loop": 0,
            "no-console": 0,
            "no-return-await": 0,
            "prettier/prettier": 1
        }
    },
    "eslintIgnore": [
        "node_modules/"
    ],
    "prettier": {
        "singleQuote": true,
        "semi": true,
        "useTabs": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "printWidth": 120
    }
}
